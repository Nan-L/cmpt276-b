<% provide(:title, "Search Result") %>
<p id="notice"><%= notice %></p>

<h1>Search Results</h1>

<table class="forms">
  <thead id="resultsHeader">
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Author</th>
      <th>Price</th>
      <th>Course_number</th>
      <th>isbn</th>
      <th>Image</th>
      <!--<th colspan="3"></th>-->
    </tr>
  </thead>

  <tbody id="resultsBody">
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to listing_path(book.id) do %><%= book.title %> <% end %></td>
        <td><%= book.year %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
        <td><%= book.course_number %></td>
        <td><%= book.isbn %></td>
        <td><%= image_tag book.image_url(:thumb) if book.image? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
