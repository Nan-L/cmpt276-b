<p id="notice"><%= notice %></p>

<h1> <%= @user.name %>'s Profile </h1>
<p>
  <strong>ID:</strong>
  <%= @user.id %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<br>

<h3> All your books</h3>

<table class="forms">
	<thead id="resultsHeader">
		<tr>
			<th>Title</th>
			<th>Year</th>
			<th>Author</th>
			<th>Price</th>
			<th>Course_number</th>
			<th>isbn</th>
			<th>Image</th>
			<!--<th colspan="3"></th>-->
		</tr>
	</thead>

	<tbody id="resultsBody">
		<% @books.each do |book| %>
		    <tr>
		        <td><%= book.title %></td>
		        <td><%= book.year %></td>
		        <td><%= book.author %></td>
		        <td><%= book.price %></td>
		        <td><%= book.course_number %></td>
		        <td><%= book.isbn %></td>
		        <td><%= image_tag book.image_url(:thumb) if book.image? %></td>
		        <td><%= link_to 'Delete this listing', book, method: :delete, data: {confirm: "Are you sure?"} %></td>
		    </tr>

		<% end %>
	</tbody>
</table>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', root_path %>
